.game-center {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #6e8efb, #a777e3);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  display: block;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.game-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.game-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s;
  position: relative;
  overflow: hidden;
}

.game-item:active {
  transform: scale(0.98);
}

.game-item.coming-soon {
  opacity: 0.8;
}

.game-icon {
  width: 100%;
  height: 200rpx;
  margin-bottom: 16rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

.game-info {
  padding: 10rpx;
}

.game-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.game-description {
  font-size: 24rpx;
  color: #666;
  display: block;
  line-height: 1.4;
}

.game-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: rgba(0, 0, 0, 0.6);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.coming-soon-text {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
} 