.sudoku-container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.timer {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.controls {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 20rpx;
}

.control-btn {
  padding: 10rpx 30rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.difficulty-picker {
  padding: 10rpx 30rpx;
  background-color: #2196F3;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.game-info {
  width: 100%;
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  background-color: white;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.hint-btn {
  margin-top: 10rpx;
  padding: 6rpx 20rpx;
  background-color: #FF9800;
  color: white;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.board {
  width: 690rpx;
  height: 690rpx;
  background-color: white;
  border: 2rpx solid #333;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.grid-row {
  display: flex;
  flex: 1;
}

.grid-cell {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  border: 1rpx solid #ccc;
  position: relative;
}

.grid-cell.selected {
  background-color: #e3f2fd;
}

.grid-cell.initial {
  color: #333;
  font-weight: bold;
}

.grid-cell.border-bottom {
  border-bottom: 2rpx solid #333;
}

.grid-cell.border-right {
  border-right: 2rpx solid #333;
}

.number-pad {
  width: 690rpx;
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 10rpx;
  padding: 20rpx;
  background-color: white;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.number-btn {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
}

.number-btn.clear {
  background-color: #f44336;
  color: white;
  grid-column: span 2;
}

.pause-overlay,
.game-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.pause-content,
.game-over-content {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  width: 80%;
  max-width: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pause-title,
.game-over-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.pause-info,
.game-over-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.pause-info text,
.game-over-info text {
  font-size: 28rpx;
  color: #666;
  margin: 10rpx 0;
}

.pause-btn,
.game-over-btn {
  padding: 20rpx 60rpx;
  background-color: #4CAF50;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
} 